def calculator(op1, oper, op2):
    op1=input("Enter operand 1: ")
    oper=input("Enter the operator: ")
    op2=input("Enter operand 2: ")
    op1=int(op1)
    op2=int(op2)
    oper=str(oper)
    if oper=="+":
        result=op1+op2
    if oper=="-":
        result=op1-op2
    if oper=="*":
        result=op1*op2
    if oper=="/":
        result=op1/op2
    print(result)
    
calculator(1, '+', 2)
